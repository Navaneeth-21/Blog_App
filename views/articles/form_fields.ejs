<div class="form-group">
    <label for="title" class="form-label">Title</label>
    <input type="text" name="title" class="form-control border border-3" id="title" value="<%= article.title%>" required />
</div>
<div class="form-group mt-2">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" id="description" rows="3"
        class="form-control border border-3" required><%=article.description%></textarea>
</div>
<div class="form-group mt-2 mb-3">
    <label for="markdown" class="form-label">Markdown</label>
    <textarea name="markdown" id="markdown" cols="30" rows="3" class="form-control border border-3"
        required><%=article.markdown%></textarea>
</div>

<a href="/" class="btn btn-danger">cancel</a>
<button type="submit" class="btn btn-primary">save</button>