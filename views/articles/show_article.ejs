<body>
    <div class="container mt-3 ">
        <h1><%= article.title%></h1>
        <p class="text-muted"><%= article.createdAt.toLocaleDateString()%></p>
        <div>
            <a href="/articles" class="btn btn-secondary mt-2">All Articles</a>
            <a href='/articles/edit/<%= article.id%>' class="btn btn-primary mt-2 ms-2">Edit</a>
            <hr>
            <div>
                <%- article.sanitizedHtml %>
            </div>
        </div>

    </div>




